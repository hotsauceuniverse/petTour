<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        >

        <LinearLayout
            android:id="@+id/one"
            android:layout_width="160dp"
            android:layout_height="334dp"
            android:background="@drawable/main_box"
            android:backgroundTint="#FEF9E6"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="뭐하지"
                    android:textSize="18dp"
                    android:textColor="#171717"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/two"
            android:layout_width="160dp"
            android:layout_height="264dp"
            android:background="@drawable/main_box"
            android:backgroundTint="#3FD484"
            android:layout_below="@+id/one"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시군구 조회"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/three"
            android:layout_width="160dp"
            android:layout_height="240dp"
            android:background="@drawable/main_box"
            android:backgroundTint="#2DAAF8"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/one"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="뭐하지"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/four"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/main_box"
            android:backgroundTint="#EEE8FF"
            android:layout_below="@id/three"
            android:layout_toRightOf="@+id/two"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="키워드 검색"
                    android:textColor="#7643FF"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/five"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:background="@drawable/main_box"
            android:backgroundTint="#FD8924"
            android:layout_below="@id/four"
            android:layout_toRightOf="@+id/two"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="뭐하지"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/six"
            android:layout_width="328dp"
            android:layout_height="72dp"
            android:background="@drawable/main_box"
            android:backgroundTint="#EEF5FE"
            android:layout_below="@id/five"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나만의 스팟"
                android:textColor="#47454C"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>